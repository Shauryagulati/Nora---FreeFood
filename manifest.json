{
  "manifest_version": 3,
  "name": "Nora - FoodFinder",
  "version": "1.0.0",
  "description": "Never miss free food again. Highlights CampusGroups events with free food.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "*://campusgroups.com/*",
    "*://*.campusgroups.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://campusgroups.com/*",
        "*://*.campusgroups.com/*"
      ],
      "js": ["keywords.js", "highlight.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
